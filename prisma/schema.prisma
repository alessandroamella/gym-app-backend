generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  telegramId    String        @unique
  username      String
  profilePic    String?
  gymEntries    GymEntry[]
  weightEntries WeightEntry[]
}

enum WorkoutType {
  GYM
  CARDIO
  YOGA
  SPORT
  OTHER
}

enum MediaType {
  IMAGE
  VIDEO
}

model Media {
  id         Int       @id @default(autoincrement())
  path       String
  type       MediaType
  gymEntries GymEntry? @relation(fields: [gymEntryId], references: [id])
  gymEntryId Int?
}

model GymEntry {
  id     Int         @id @default(autoincrement())
  userId Int
  date   DateTime
  points Int
  type   WorkoutType
  notes  String?
  media  Media[]
  user   User        @relation(fields: [userId], references: [id])
}

model WeightEntry {
  id     Int      @id @default(autoincrement())
  userId Int
  date   DateTime
  weight Float
  user   User     @relation(fields: [userId], references: [id])
}
